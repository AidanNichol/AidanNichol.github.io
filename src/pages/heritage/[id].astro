---
import { getCollection, render } from 'astro:content';
import Layout from '../../layouts/collection.astro';
// 1. Generate a new path for every collection entry
export async function getStaticPaths() {
  const blogEntries = await getCollection('heritage');
  console.log('getStaticPaths', blogEntries);
  return blogEntries.map((entry) => ({
    params: { id: entry.id },
    props: { entry },
  }));
}
// 2. When it's time to render, you can get the entry directly from the prop
const { entry } = Astro.props;
const { Content } = await render(entry);
// console.log({ entry, props: Astro.props });
---

<Layout collection={entry.collection} id={entry.id} page={entry.data}>
  <Content />
</Layout>
